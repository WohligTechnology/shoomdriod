    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.example.jay.mat.Orders"
        android:id="@+id/r">

        <include android:id="@+id/toolbar_actionbar" layout="@layout/toolbar_default"
            android:layout_width="match_parent" android:layout_height="wrap_content" />





        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_actionbar">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView7"
                    android:src="@drawable/avatar"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:maxHeight="140dp"
                    android:maxWidth="140dp"
                    android:layout_gravity="center_horizontal" />




            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ccc">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Username :"
                        android:id="@+id/textView21"
                        android:textSize="18sp"
                        android:background="#fff"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="0.5dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Sohan Honakeri"
                        android:id="@+id/textView22"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="left|center"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="0.5dp"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Phone Number :"
                        android:id="@+id/textView24"
                        android:textSize="18sp"
                        android:background="#fff"
                        android:layout_marginBottom="0.5dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="98200 98200"
                        android:id="@+id/textView25"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="left|center"
                        android:layout_marginBottom="0.5dp"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Location :"
                        android:id="@+id/textView26"
                        android:textSize="18sp"
                        android:background="#fff"
                        android:layout_marginBottom="0.5dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Matunga -(East)"
                        android:id="@+id/textView27"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="left|center"
                        android:layout_marginBottom="0.5dp"
                        android:paddingLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Description :"
                        android:id="@+id/textView28"
                        android:textSize="18sp"
                        android:background="#fff"
                        android:layout_marginBottom="0.5dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="227392"
                        android:id="@+id/textView31"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="left|center"
                        android:layout_marginBottom="0.5dp"
                        android:paddingLeft="10dp" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="68dp"
                android:layout_height="34dp"
                android:text="Edit"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:background="@color/myPrimaryColor"
                android:layout_marginTop="30dp" />

        </LinearLayout>
        <android.support.v4.widget.DrawerLayout android:id="@+id/drawer"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:layout_alignParentBottom="true">


            <fragment android:id="@+id/fragment_drawer"
                android:name="com.example.jay.mat.NavigationDrawerFragment"
                android:layout_width="@dimen/navigation_drawer_width"
                android:layout_height="match_parent" android:layout_gravity="start"
                app:layout="@layout/fragment_navigation_drawer" />

        </android.support.v4.widget.DrawerLayout>
    </RelativeLayout>