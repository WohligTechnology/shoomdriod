<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar_actionbar" layout="@layout/toolbar_default"
        android:layout_width="match_parent" android:layout_height="wrap_content" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/drawer">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="#cccccc">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView3"
                        android:baselineAlignBottom="false"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"
                        android:src="@drawable/product" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Lays"
                        android:id="@+id/textView"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:minLines="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="MRP Rs 40/-"
                        android:id="@+id/textView17"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:minLines="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rs 20/- Save Rs 20/-"
                        android:id="@+id/textView2"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:minLines="1"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp"
                        android:layout_marginBottom="0.25dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="#cccccc">

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView5"
                        android:src="@drawable/product"
                        android:baselineAlignBottom="false"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Lays"
                        android:id="@+id/textView66"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:minLines="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="MRP Rs 40/-"
                        android:id="@+id/textView43"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:minLines="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rs 20/- Save Rs 20/-"
                        android:id="@+id/textView72"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:minLines="1"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp"
                        android:layout_marginBottom="0.25dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="#cccccc" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView41"
                        android:src="@drawable/product"
                        android:baselineAlignBottom="false"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Lays"
                        android:id="@+id/textView23"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:minLines="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="MRP Rs 40/-"
                        android:id="@+id/textView44"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:minLines="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Rs 20/- Save Rs 20/-"
                        android:id="@+id/textView42"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:minLines="1"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp"
                        android:layout_marginBottom="0.25dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="#cccccc" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView4"
                        android:src="@drawable/product"
                        android:baselineAlignBottom="false"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Lays"
                        android:id="@+id/textView3"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:minLines="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="0.25dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="MRP Rs 40/-"
                        android:id="@+id/textView45"
